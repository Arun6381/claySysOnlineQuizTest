@model ClaysysOnlineQuizTest.Models.Question

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<link href="~/Content/CustomCss/Admin/deletequestion.css" rel="stylesheet" />
<h2 class="heading">Delete Question</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container">
    <h4>Question Details</h4>

    <div class="question-details">
        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.TestName):</strong>
            <span>@Html.DisplayFor(model => model.TestName)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.QuestionText):</strong>
            <span>@Html.DisplayFor(model => model.QuestionText)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.Option1):</strong>
            <span>@Html.DisplayFor(model => model.Option1)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.Option2):</strong>
            <span>@Html.DisplayFor(model => model.Option2)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.Option3):</strong>
            <span>@Html.DisplayFor(model => model.Option3)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.Option4):</strong>
            <span>@Html.DisplayFor(model => model.Option4)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.CorrectOption):</strong>
            <span>@Html.DisplayFor(model => model.CorrectOption)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.Score):</strong>
            <span>@Html.DisplayFor(model => model.Score)</span>
        </div>

        <div class="detail-item">
            <strong>@Html.DisplayNameFor(model => model.CreatedAt):</strong>
            <span>@Html.DisplayFor(model => model.CreatedAt)</span>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Confirm Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>



